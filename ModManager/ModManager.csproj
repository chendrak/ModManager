<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Description>A Mod for Rogue Genesia that can manage other Mods for Rogue Genesia</Description>
    <Version>1.0.0</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <RestoreAdditionalProjectSources>
      https://api.nuget.org/v3/index.json;
      https://nuget.bepinex.dev/v3/index.json
    </RestoreAdditionalProjectSources>
    <RootNamespace>ModManager</RootNamespace>
    <PackageVersion>1.0.0</PackageVersion>
    <Authors>chendrak</Authors>
    <IsPackable>false</IsPackable>
    <PackageId>ModManager</PackageId>
    <Nullable>enable</Nullable>
    <AssemblyName>ModManager</AssemblyName>
    <Product>ModManager</Product>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-be.*" IncludeAssets="compile" />
    <PackageReference Include="BepInEx.PluginInfoProps" Version="2.*" />
    <PackageReference Include="RogueGenesia.Mod" Version="1.0.63" />
  </ItemGroup>
  
  <!-- DLLs generated by BepInEx -->

  <ItemGroup>
    <!-- the compiler will copy these, since they're referenced -->
    <None Include="../Libraries/**/*" CopyToOutputDirectory="Never" CopyToPublishDirectory="Never" LinkBase="Libraries" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="UniverseLib.IL2CPP.Interop">
      <HintPath>..\Libraries\UniverseLib.IL2CPP.Interop.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ModManager.RogueGenesiaMod\ModManager.RogueGenesiaMod.csproj" />
  </ItemGroup>
  
  <Target Name="PostPublishCleanup" AfterTargets="Publish" Condition="'$(Configuration)' == 'Release'">
    <ItemGroup>
      <FilesToDelete Include="$(PublishDir)*.dll" Exclude="$(PublishDir)$(TargetName)*.dll;$(PublishDir)UniverseLib.IL2CPP.Interop.dll" />
      <FilesToDelete Include="$(PublishDir)*.pdb" />
      <FilesToDelete Include="$(PublishDir)*.deps.json" />
    </ItemGroup>
    <Message Text="Deleting references and debug symbols from publish output" Importance="high" />
    <Delete Files="@(FilesToDelete)" />
  </Target>
</Project>
